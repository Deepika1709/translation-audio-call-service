# ======================
# Server
# ======================
PORT=4005
JWT_SECRET=your_jwt_secret_here

# ======================
# Database
# ======================
MONGO_URI=your_mongo_connection_string_here

# ======================
# Azure Communication Services (ACS)
# ======================
ACS_CONNECTION_STRING=your_acs_connection_string_here
ACS_RESOURCE_ENDPOINT=https://your-acs-resource.communication.azure.com

# ======================
# Azure Speech (Cognitive Services)
# ======================
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus
COGNITIVE_SERVICE_ENDPOINT=https://your-speech-service.cognitiveservices.azure.com

# ======================
# Webhooks / Audio Streaming
# ======================
NGROK_HOST=your_ngrok_host_here
CALLBACK_PATH=/call-events
AUDIO_STREAM_PATH=/audio-stream

# ======================
# Redis
# ======================
REDIS_URL=your_redis_connection_string_here

# ======================
# Azure Service Bus
# ======================
AZURE_SERVICE_BUS_CONNECTION_STRING=your_service_bus_connection_string_here

# ======================
# Translator
# ======================
AZURE_TRANSLATOR_KEY=your_translator_key_here
AZURE_TRANSLATOR_REGION=westus2
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com

# ======================
# Azure Storage
# ======================
AZURE_STORAGE_ACCOUNT=your_storage_account_name
AZURE_STORAGE_KEY=your_storage_key_here
AZURE_STORAGE_CONTAINER=your_container_name
